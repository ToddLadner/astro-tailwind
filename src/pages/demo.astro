---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Button from '@components/Button.astro';

import robot from '@images/funkopop.png';

const { 
	title = 'My Astro Blog',
	description = 'My musings about the Astro framework',
	...rest 
} = Astro.props;
---

<style>
.media-pattern {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-3xl);
}

.media-pattern > :first-child {
	flex-basis: 400px; 
  flex-grow: 1;
}

.media-pattern > :last-child {
  flex-basis: 0;
  flex-grow: 999;
  min-inline-size: 0%;
}

li {
	font-size: var(--text-md); 
	padding-block: var(--spacing-3xs);
}
li:not(:last-child) { border-bottom-width: 2px; }

</style>

<Layout {title} {description}>
	<main class="">
    <div class="">
			<p class="">live and in color</p>
	    	<h1 class="">Tailwind for UX / UI <br> & Developers</h1>
	    	<p class="">
					<span class="">From Todd Ladner</span>
					<span class="">Design Engineer, Frontend Fanatic, CSS Whisperer</span>
				</p>
		</div>
		
		<div class="">
			<figure class="" style="">
				<Image
      		src={robot}
      		alt="descriptive text"
      		widths={[240, 540, 720, robot.width]}
      		sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${robot.width}px`}
    		/>
			</figure>
			
			<div class="">
				<h2 class="">This course is for</h2>
				<ul role="list" class="">
					<li>UX/UI Designers</li>
					<li>Front End Developers</li>
					<li>Digital professionals in product development</li>
					<li>Craig</li>
				</ul>

				<h2 class="">Prerequisites</h2>
				<ul role="list">
					<li>Basic understanding of HTML and CSS</li>
					<li>Basic knowledge of UX methodologies</li>
				</ul>

				<Button size='lg' classes="" style="">Sign up</Button>
			</div>
		</div>
  </main>
</Layout>


