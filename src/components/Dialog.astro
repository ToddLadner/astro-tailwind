---
import type { HTMLAttributes } from 'astro/types';
import { Icon } from 'astro-icon/components';
import Button from '@components/Button.astro';


interface Props extends HTMLAttributes<"dialog"> {
  id: string;
  role?: "alertdialog" | "dialog";
  showHeader?: boolean;
  showFooter?: boolean;
  heading: string;
  overline?: string;
  icon?: string;
  theme?: "outlined" | "tonal" | "filled" | "elevated";
  classes?: string;
}

const {
  id,
  role = 'dialog',
  showHeader = true,
  showFooter = true,
  heading,
  overline,
  icon,
  theme,
  classes = '',
  ...rest
} = Astro.props;
---

<style>
  @layer components {
    dialog {
      --bg-color: var(--color-surface-1);
      --border-color: transparent;
      --border-width: 0;
      --shadow: var(--shadow-lg);

      display: grid;
      grid-template-rows: auto 1fr auto;
      max-height: 75dvh;
      border-radius: var(--radius-md);
      pointer-events: none;
      padding: 0;
      inset: 0;
      box-shadow: var(--shadow);
      width: min(100%, var(--measure-lg));
      overflow: hidden;
      max-width: none;
      
      &:not([open]) { display: none }

      &[open] { pointer-events: all }
      
      :is(header, .content, footer) { 
        padding-inline: var(--spacing-sm) 
      }
      :is(header, footer) { 
        padding-block: var(--spacing-sm); 
        background-color: var(--color-surface-2); 
      }
      .content {
        overflow-y: auto;
        padding-block: var(--spacing-md);
      }
    }

    html:has(dialog[open]:not([role="alertdialog"])) {
      overflow: hidden;
    }
    
    /* Transition */
    dialog, 
    dialog::backdrop {
      --duration: 1s;
      --delay: .25s;
      --timing-function: var(--ease-spring-2);

      /* Interpolate sizes keywords */
      transition: 
        display var(--duration) var(--timing-function), 
        overlay var(--duration) var(--timing-function),
        transform var(--duration) var(--timing-function), 
        opacity var(--duration) var(--timing-function);
        transition-behavior: allow-discrete; /* Note: be sure to write this after the shorthand */
    }

    /* Ending | Off Stage  */
    dialog {
      transform:  scale(.9);
    }

    dialog, dialog::backdrop { 
      opacity: 0;
    }

    /* On Stage */
    dialog[open]::backdrop {
      opacity: 1;
    }

    dialog[open] {
      opacity: 1;
      transform: translateY(0);
    }

    /* Starting | Off Stage */
    @starting-style {
      dialog[open]{
        opacity: 0;
        transform: translateY(20%);
      }
      
      dialog[open]::backdrop {
        opacity: 0;
      }
    }

    /* Backdrop */
    dialog::backdrop {
      --glass-lightness: 100%;

      background: hsl(0 0% var(--glass-lightness) / 50%);
      backdrop-filter: blur(6px);

      @media (prefers-color-scheme: dark) {
        --glass-lightness: 0;
      }
    }
  }

  dialog[role="alertdialog"] {
    margin-bottom: 10vh;
    position: fixed;
  }
</style>
<style is:global>
  [color-scheme='light'] ::backdrop {
    background: hsl(0 0% var(--glass-lightness) / 50%);
  }
  [color-scheme='dark'] ::backdrop {
    --glass-lightness: 0;
  }
</style>

<dialog
  id={id}
  role={role}
  class="modal"
  class:list={[classes]}
  aria-modal="true"
  aria-describedby="dialog-content"
  {...(showHeader
    ? { 'aria-labelledby': 'dialog-heading' }
    : { 'aria-label': heading })
  }
  {...rest}
>
  <!-- Header | If showHeader is true -->
  {showHeader && (
    <header class="flex items-center gap-xs">
      <!-- Icon -->
      {icon && <Icon name={icon} class="icon" />}
      <!-- Heading -->
      <hgroup class="flex flex-col stack-3xs">
        {overline && <p class="text-xs">{overline}</p>}  
        <h2 id="dialog-heading" class="text-lg">{heading}</h2>
      </hgroup>
      <!-- Close Button -->
      <Button
        onclick="this.closest('dialog').close()"
        theme='filled' 
        variant='icon-button'
        icon='xmark-large-solid' 
        aria-label='close dialog'
        classes="ml-[auto]"
      />
    </header>
  )}
  <!-- Content -->
  <article id="dialog-content" class="content stack-md">
    <slot/>
  </article>
  <!-- Footer -->
  {showFooter && (
    <footer class="actions flex justify-end gap-xs">
      <slot name="dialog-footer" />
    </footer>
  )}
</dialog>

<script>
  if (typeof window !== "undefined") {
    import('focus-trap')
      .then(({ createFocusTrap }) => {
        document.querySelectorAll('.modal').forEach(dialog => {
          const trap = createFocusTrap(dialog, {
            clickOutsideDeactivates: true,
            escapeDeactivates:       true,
            onDeactivate:            () => dialog.close(),
            fallbackFocus:           dialog,
          });

          // Open â†’ showModal() + activate trap
          const origShow = dialog.showModal;
          dialog.showModal = function() {
            origShow.call(dialog);
            trap.activate();
          };

          // Teardown on close/cancel/backdrop
          dialog.addEventListener('close',  () => trap.deactivate());
          dialog.addEventListener('cancel', () => dialog.close());
          dialog.addEventListener('click', e => e.target === dialog && dialog.close());
        });
      })
      .catch((err) => {
        console.error('Failed to load focus-trap for dialog focus management.', err);
      });
  }
</script>
